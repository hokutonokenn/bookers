<div class="message">
 <% if flash[:notice] %>
 <p><%= flash[:notice] %></p>
<% end %>
</div>

<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
     <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td><%= link_to 'Show', book_path(book.id) %></td>
       <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
       <td><%= link_to 'Destroy', book_path(book[:id]), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
     </tr>
    <% end %>
  </tbody>

</table>

<h3>New book</h3>

<% if @book.errors.any? %>
 <p><%= @book.errors.count %> errors prohibited this book from begin saved:</p>
 <ul>
   <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
<% end %>

<%= form_with model: @book, url: '/books', method: :post do |f| %>
 <div class="field">
 <h4>Title</h4>
 <%= f.text_field :title %>
 </div>

 <div class="field">
 <h4>Body</h4>
 <%= f.text_area :body %>
 </div>

 <br><%= f.submit 'Create Book' %></br>
<% end %>


