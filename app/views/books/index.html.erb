<h1>Books</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Body</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
     <tr>
       <td><%= book.title %></td>
       <td><%= book.body %></td>
       <td><%= link_to 'Show', book_path(book.id) %></td>
       <td><%= link_to 'Edit', edit_book_path(book.id) %></td>
       <td><%= link_to 'Destroy', destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sureï¼Ÿ" %></td>
     </tr>
    <% end %>
  </tbody>

</table>

<h3>New book</h3>
<%= form_with model: @book, url: '/books', method: :post do |f| %>

 <%= f.label :title %><br>
 <%= f.text_field :title %>

 <%= f.label :body %><br>
 <%= f.text_area :body %>

 <br><%= f.submit 'Create Book' %></br>
<% end %>


