<h1>Editing Book</h1>

<% if @book.errors.any? %>
 <p><%= @book.errors.count %> errors prohibited this book from begin saved:</p>
 <ul>
   <% @book.errors.full_messages.each do |message| %>
   <li><%= message %></li>
   <% end %>
 </ul>
<% end %>

<%= form_with model: @book, url: book_path(@book.id), method: :patch do |f| %>

 <div class="field">
  <h4>Title</h4>
  <%= f.text_field :title %>
 </div>

 <div class="field">
  <h4>Body</h4>
  <%= f.text_area :body %>
 </div>

 <br><%= f.submit 'Update Book' %><br>

<% end %>

<div class="link">
 <%= link_to 'Show', book_path(@book) %> | <%= link_to 'Back', '/books' %>
</div>